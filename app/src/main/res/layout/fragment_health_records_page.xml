<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".health_records_page">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:fontFamily="@font/ibm_semibold"
                    android:text="Hey, "
                    android:textAppearance="@style/TextAppearance.AppCompat.Large" />

                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/teal_200"
                    android:backgroundTintMode="screen"
                    android:fontFamily="@font/ibm_bold"
                    android:text="@string/username"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    app:cornerRadius="20dp"
                    app:icon="@drawable/ic_round_arrow_circle_down_24"
                    app:iconGravity="end" />

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="32dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></com.google.android.material.card.MaterialCardView>

            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:backgroundTint="@android:color/white"
                android:drawableRight="@drawable/ic_baseline_arrow_right_24"
                android:padding="15dp"

                android:text="Clinical Documents"
                android:textAlignment="textStart"
                android:textColor="@color/teal_700"
                app:elevation="5dp" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:backgroundTint="@android:color/white"
                android:drawableRight="@drawable/ic_baseline_arrow_right_24"
                android:padding="15dp"
                android:text="Doctor Consultation"
                android:textAlignment="textStart"
                android:textColor="@color/teal_700"
                app:elevation="5dp" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:backgroundTint="@android:color/white"
                android:drawableRight="@drawable/ic_baseline_arrow_right_24"
                android:padding="15dp"
                android:text="Test Repost"
                android:textAlignment="textStart"
                android:textColor="@color/teal_700"
                app:elevation="5dp" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:drawableEnd="@drawable/ic_baseline_arrow_right_24"
                android:padding="15dp"
                android:text="Hospitalisation"
                android:textAlignment="textStart"
                android:textColor="@color/teal_700"
                app:backgroundTint="@color/white"
                app:cornerRadius="10dp"
                app:elevation="5dp" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:backgroundTint="@android:color/white"
                android:drawableRight="@drawable/ic_baseline_arrow_right_24"
                android:padding="15dp"
                android:text="vaccination reports"
                android:textAlignment="textStart"
                android:textColor="@color/teal_700"
                app:elevation="5dp" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:backgroundTint="@android:color/white"
                android:drawableRight="@drawable/ic_baseline_arrow_right_24"
                android:padding="15dp"
                android:text="Bills"
                android:textAlignment="textStart"
                android:textColor="@color/teal_700"
                app:elevation="5dp" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:backgroundTint="@android:color/white"
                android:drawableRight="@drawable/ic_baseline_arrow_right_24"
                android:padding="15dp"
                android:text="Insurance"
                android:textAlignment="textStart"
                android:textColor="@color/teal_700"
                app:elevation="5dp" />

        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>