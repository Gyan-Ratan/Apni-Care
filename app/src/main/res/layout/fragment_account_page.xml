<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/accountpag"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".account_page">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15sp"
            app:cardElevation="15sp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/linearLayout7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/shapeableImageView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/avatar__1_"
                        tools:layout_conversion_absoluteHeight="102dp"
                        tools:layout_conversion_absoluteWidth="102dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="bottom"
                        android:orientation="vertical"
                        app:layout_constraintBottom_toBottomOf="@+id/shapeableImageView2"
                        app:layout_constraintStart_toEndOf="@+id/shapeableImageView2"
                        app:layout_constraintTop_toTopOf="@+id/shapeableImageView2"
                        tools:layout_conversion_absoluteHeight="108dp"
                        tools:layout_conversion_absoluteWidth="141dp">

                        <TextView
                            android:id="@+id/text_dashboard"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="Hi,"
                            android:textAppearance="@style/TextAppearance.MdcTypographyStyles.Subtitle2" />

                        <TextView
                            android:id="@+id/text_email"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textAppearance="@style/TextAppearance.MdcTypographyStyles.Subtitle1"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/text_gender"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textAppearance="@style/TextAppearance.MdcTypographyStyles.Overline"
                            android:visibility="gone" />

                        <View
                            android:id="@+id/divider6"
                            android:layout_width="match_parent"
                            android:layout_height="6dp" />

                        <TextView
                            android:id="@+id/phoneNumber"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:gravity="center"
                            android:text="Mobile Number"
                            android:textAppearance="@style/TextAppearance.MdcTypographyStyles.Button"
                            android:layout_weight="1" />

                    </LinearLayout>

                    <androidx.appcompat.widget.AppCompatImageButton
                        android:id="@+id/edit_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:minWidth="48dp"
                        android:minHeight="48dp"
                        android:src="@drawable/edit"
                        android:tint="@color/cyan_800"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:src="@drawable/edit" />


                </androidx.constraintlayout.widget.ConstraintLayout>


                <View
                    android:id="@+id/divider2"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="?android:attr/listDivider"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />



                <View
                    android:id="@+id/divider3"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="?android:attr/listDivider"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!--            <LinearLayout-->
        <!--                android:layout_width="match_parent"-->
        <!--                android:layout_height="wrap_content"-->
        <!--                android:orientation="vertical"-->

        <!--                >-->

        <!--            </LinearLayout>-->


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <TextView
            android:id="@+id/account_family"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:drawablePadding="20dp"
            android:fontFamily="@font/roboto_bold"
            android:text="Family Members"
            android:textAppearance="@style/TextAppearance.MdcTypographyStyles.Headline7"
            android:textColor="@color/black"
            app:drawableLeftCompat="@drawable/ic_baseline_family_restroom_24" />

        <TextView
            android:id="@+id/account_orders"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:drawablePadding="20dp"
            android:fontFamily="@font/roboto_bold"
            android:text="Your orders"
            android:textAppearance="@style/TextAppearance.MdcTypographyStyles.Headline7"
            android:textColor="@color/black"
            app:drawableLeftCompat="@drawable/ic_baseline_library_books_24" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/account_addressbook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:drawablePadding="20dp"
            android:fontFamily="@font/roboto_bold"
            android:text="Address book"
            android:textAppearance="@style/TextAppearance.MdcTypographyStyles.Headline7"
            android:textColor="@color/black"
            app:drawableLeftCompat="@drawable/ic_baseline_location_on_24" />

        <View
            android:id="@+id/divider4"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="?android:attr/listDivider" />

        <TextView
            android:id="@+id/account_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:drawablePadding="20dp"
            android:fontFamily="@font/roboto_bold"
            android:text="Settings"
            android:textAppearance="@style/TextAppearance.MdcTypographyStyles.Headline7"
            android:textColor="@color/black"
            app:drawableLeftCompat="@drawable/ic_baseline_settings_24" />

        <TextView
            android:id="@+id/Needhelp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:drawablePadding="20dp"
            android:fontFamily="@font/roboto_bold"
            android:text="Need help ?"
            android:textAppearance="@style/TextAppearance.MdcTypographyStyles.Headline7"
            android:textColor="@color/black"
            app:drawableLeftCompat="@drawable/ic_baseline_help_24" />

        <TextView
            android:id="@+id/aboutus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:drawablePadding="20dp"
            android:fontFamily="@font/roboto_bold"
            android:text="About us"
            android:textAppearance="@style/TextAppearance.MdcTypographyStyles.Headline7"
            android:textColor="@android:color/black"
            app:drawableStartCompat="@drawable/info" />

        <TextView
            android:id="@+id/referButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:drawablePadding="20dp"
            android:fontFamily="@font/roboto_bold"
            android:text="Refer "
            android:textAppearance="@style/TextAppearance.MdcTypographyStyles.Headline7"
            android:textColor="@android:color/black"
            app:drawableStartCompat="@drawable/ic_baseline_share_24" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/logOut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:drawablePadding="20dp"
            android:fontFamily="@font/roboto_bold"
            android:text="Logout"
            android:textAppearance="@style/TextAppearance.MdcTypographyStyles.Headline7"
            android:textColor="@color/black"
            app:drawableLeftCompat="@drawable/ic_baseline_login_24" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>


